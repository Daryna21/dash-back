{
  "name": "dash-back",
  "version": "0.0.1",
  "description": "Dashboard backend",
  "main": "dist/index.js",
  "repository": "https://github.com/atherdon/dash-back",
  "author": "kolserdav <serega12101983@gmail.com>",
  "license": "MIT",
  "private": false,
  "prisma": {
    "schema": "src/orm/schema.prisma"
  },
  "scripts": {
    "ts": "tsc -p . -w",
    "build": "tsc -p .",
    "dev": "nodemon ${npm_package_main}",
    "start": "node ${npm_package_main}",
    "prod": "echo logfile $(pwd)/logs/${npm_package_name}-${npm_package_version}.log > ~/.screenrc && screen -dmS you -L yarn start",
    "deploy": "yarn build && yarn prod",
    "logs": "cat $(pwd)/logs/${npm_package_name}-${npm_package_version}.log",
    "focus": "screen -x ${npm_package_name}",
    "codegen": "graphql-codegen --config codegen.yml",
    "migrate:dev": "prisma migrate dev --preview-feature",
    "migrate:reset": "prisma migrate reset --preview-feature",
    "migrate:deploy": "prisma migrate deploy --preview-feature",
    "migrate:status": "prisma migrate status --preview-feature"

  },
  "dependencies": {
    "@prisma/client": "^2.16.0",
    "apollo-server-express": "^2.19.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.20.1",
    "@graphql-codegen/introspection": "1.18.1",
    "@graphql-codegen/typescript": "1.20.2",
    "@graphql-codegen/typescript-document-nodes": "1.17.9",
    "@graphql-codegen/typescript-resolvers": "^1.18.1",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "gulp": "^4.0.2",
    "prettier": "^2.2.1",
    "prettierrc": "^0.0.0-5",
    "prisma": "^2.16.0",
    "typescript": "^4.1.3"
  }
}
